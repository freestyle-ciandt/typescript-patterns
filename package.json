{
  "name": "typescript-patterns",
  "version": "1.0.0",
  "description": "This repository contains a basic structure to learn good practices of Typescript, as well as some Design Patterns alongside the AWS SAM framework.",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "audit": "npm audit --production --audit-level=critical && npm-run-all --parallel audit:*",
    "audit:getVehicleLambda": "cd src/lambdas/getVehicleLambda && npm audit --production --audit-level=critical",
    "quality": "npm run audit && npm run lint && npm run test",
    "prepare": "husky install",
    "pre-commit": "npm run quality"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.1",
    "typescript": "^4.7.4"
  }
}
